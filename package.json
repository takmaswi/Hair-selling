{
  "name": "truth-hair",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "dev:d1": "wrangler dev --local --persist",
    "build": "next build",
    "build:d1": "next build && wrangler deploy",
    "start": "next start",
    "lint": "next lint",
    "type-check": "tsc --noEmit",
    "d1:setup": "node scripts/d1/setup.js",
    "d1:migrate": "node scripts/d1/migrate.js up",
    "d1:migrate:status": "node scripts/d1/migrate.js status",
    "d1:migrate:reset": "node scripts/d1/migrate.js reset",
    "d1:seed": "wrangler d1 execute truthhair-database --file=database/migrations/002_seed_data.sql",
    "d1:console": "wrangler d1 execute truthhair-database --command",
    "d1:list-tables": "wrangler d1 execute truthhair-database --command=\"SELECT name FROM sqlite_master WHERE type='table';\"",
    "d1:backup": "wrangler d1 backup create truthhair-database",
    "d1:backup:list": "wrangler d1 backup list truthhair-database",
    "deploy": "wrangler pages deploy .vercel/output/static",
    "postinstall": "echo 'D1 database ready - run npm run d1:setup to initialize'"
  },
